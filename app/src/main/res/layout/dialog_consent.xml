<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/surfaceContainerLow"
    app:cardCornerRadius="12dp"
    android:background="@color/surfaceContainerLow"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingVertical="12dp"
        android:paddingHorizontal="8dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/agreementDialogTitle"
            style="@style/TextAppearance.Material3.TitleSmall"
            android:textColor="@color/onSurfaceVariant"
            android:layout_marginHorizontal="8dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/agreementDialogDescription"
            style="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="@color/onSurfaceVariant"
            android:layout_marginVertical="4dp"
            android:layout_marginHorizontal="8dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/dialogAgreeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.Material3.CardView.Elevated"
                android:text="@string/agreementButtonText"
                app:backgroundTint="#F4F4EF"
                android:layout_marginStart="8dp"
                android:elevation="3dp"
                android:textColor="@color/tertiary"
                app:cornerRadius="100dp"
                android:layout_marginEnd="8dp"
                />

            <Button
                android:id="@+id/dialogDeclineButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.Material3.Button.TextButton"
                android:text="@string/disagreementButtonText"
                android:textColor="@color/primary"
                />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>